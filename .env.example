# Variables de entorno para la configuración del sistema
# Copiar este archivo como .env y actualizar con valores reales

# Configuración de entorno
ENVIRONMENT=development  # development, testing, production

# API Keys
FOOTBALL_DATA_API_KEY=tu_clave_api_football_data_aqui
API_FOOTBALL_KEY=tu_clave_api_football_aqui
API_FOOTBALL_HOST=v3.football.api-sports.io

# Configuración de la base de datos
DB_TYPE=sqlite  # sqlite, postgresql, mysql
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=football_analytics

# Configuración de Flask
FLASK_APP=app.py
FLASK_ENV=development  # development, production
FLASK_DEBUG=1
SECRET_KEY=cambiar_esta_clave_en_produccion

# Configuración de Redis (para caché)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Configuración de tareas programadas
ENABLE_SCHEDULED_TASKS=true
UPDATE_MATCHES_INTERVAL=86400  # segundos (86400 = 1 día)
UPDATE_TEAMS_INTERVAL=604800  # segundos (604800 = 1 semana)
