    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="{{ url_for('static', filename='js/app.js') }}"></script>
    <script>
        // Inicializar AOS (Animate On Scroll)
        AOS.init({
            duration: 800,
            once: true
        });

        // Variables globales
        let isDarkTheme = false;
        let searchTimeout;

        // Toggle tema oscuro/claro
        function toggleTheme() {
            isDarkTheme = !isDarkTheme;
            const body = document.body;
            const icon = document.getElementById('theme-icon');
            
            if (isDarkTheme) {
                body.classList.add('dark-theme');
                icon.className = 'fas fa-sun';
            } else {
                body.classList.remove('dark-theme');
                icon.className = 'fas fa-moon';
            }
            
            localStorage.setItem('darkTheme', isDarkTheme);
        }

        // Cargar tema guardado
        function loadSavedTheme() {
            const savedTheme = localStorage.getItem('darkTheme');
            if (savedTheme === 'true') {
                toggleTheme();
            }
        }

        // BÃºsqueda inteligente
        document.getElementById('global-search').addEventListener('input', function(e) {
            clearTimeout(searchTimeout);
            const query = e.target.value.trim();
            
            if (query.length < 2) {
                hideSuggestions();
                return;
            }
            
            searchTimeout = setTimeout(() => {
                searchTeams(query);
            }, 300);
        });

        async function searchTeams(query) {
            try {
                const response = await fetch(`/api/search/teams?q=${encodeURIComponent(query)}`);
                const suggestions = await response.json();
                showSuggestions(suggestions);
            } catch (error) {
                console.error('Error en bÃºsqueda:', error);
                // Fallback a datos predefinidos
                const fallbackSuggestions = [
                    { name: 'Real Madrid', league: 'La Liga', country: 'EspaÃ±a' },
                    { name: 'FC Barcelona', league: 'La Liga', country: 'EspaÃ±a' },
                    { name: 'Manchester City', league: 'Premier League', country: 'Inglaterra' }
                ].filter(team => team.name.toLowerCase().includes(query.toLowerCase()));
                showSuggestions(fallbackSuggestions);
            }
        }

        function showSuggestions(suggestions) {
            const container = document.getElementById('search-suggestions');
            container.innerHTML = '';
            
            suggestions.forEach(suggestion => {
                const item = document.createElement('div');
                item.className = 'suggestion-item';
                item.innerHTML = `
                    <img src="${suggestion.logo}" alt="${suggestion.name}" class="team-logo">
                    <div>
                        <div class="fw-bold">${suggestion.name}</div>
                        <small class="text-muted">${suggestion.league}</small>
                    </div>
                `;
                item.onclick = () => selectTeam(suggestion);
                container.appendChild(item);
            });
            
            container.style.display = suggestions.length > 0 ? 'block' : 'none';
        }

        function hideSuggestions() {
            document.getElementById('search-suggestions').style.display = 'none';
        }

        function selectTeam(team) {
            document.getElementById('global-search').value = team.name;
            hideSuggestions();
            // AquÃ­ irÃ­a la lÃ³gica para mostrar informaciÃ³n del equipo
            console.log('Equipo seleccionado:', team);
        }

        // Acciones rÃ¡pidas
        function quickAnalysis(type) {
            switch(type) {
                case 'historical':
                    window.location.href = '/historico';
                    break;
                case 'prediction':
                    window.location.href = '/futuro';
                    break;
                case 'comparison':
                    // Implementar comparador rÃ¡pido
                    alert('Comparador de equipos - Funcionalidad en desarrollo');
                    break;
            }
        }

        function showFavorites() {
            // Implementar sistema de favoritos
            alert('Sistema de favoritos - Funcionalidad en desarrollo');
        }

        // Cargar partidos destacados
        async function loadFeaturedMatches() {
            const container = document.getElementById('featured-matches');
            
            try {
                const response = await fetch('/api/dashboard/featured-matches');
                const matches = await response.json();
                
                container.innerHTML = matches.map(match => `
                    <div class="match-card">
                        <div class="teams-container">
                            <div class="team team-home">
                                <img src="${match.home_logo || 'https://via.placeholder.com/30'}" class="team-logo me-2" alt="${match.home_team}">
                                <span class="fw-bold">${match.home_team}</span>
                            </div>
                            <div class="vs-separator">VS</div>
                            <div class="team team-away">
                                <span class="fw-bold">${match.away_team}</span>
                                <img src="${match.away_logo || 'https://via.placeholder.com/30'}" class="team-logo ms-2" alt="${match.away_team}">
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">${match.time}</small>
                            <span class="prediction-badge">${match.prediction} ${match.confidence}%</span>
                        </div>
                        <div class="confidence-bar">
                            <div class="confidence-fill" style="width: ${match.confidence}%"></div>
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Error cargando partidos:', error);
                // Fallback a datos estÃ¡ticos
                container.innerHTML = `
                    <div class="match-card">
                        <div class="teams-container">
                            <div class="team team-home">
                                <img src="https://via.placeholder.com/30" class="team-logo me-2" alt="Real Madrid">
                                <span class="fw-bold">Real Madrid</span>
                            </div>
                            <div class="vs-separator">VS</div>
                            <div class="team team-away">
                                <span class="fw-bold">FC Barcelona</span>
                                <img src="https://via.placeholder.com/30" class="team-logo ms-2" alt="Barcelona">
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">Hoy 21:00</small>
                            <span class="prediction-badge">Victoria Local 67%</span>
                        </div>
                        <div class="confidence-bar">
                            <div class="confidence-fill" style="width: 67%"></div>
                        </div>
                    </div>
                `;
            }
        }

        // Actualizar estadÃ­sticas en tiempo real
        async function updateRealTimeStats() {
            try {
                const response = await fetch('/api/dashboard/stats');
                const stats = await response.json();
                
                document.getElementById('total-predictions').textContent = stats.total_predictions.toLocaleString();
                document.getElementById('accuracy-rate').textContent = stats.accuracy_rate + '%';
                document.getElementById('teams-analyzed').textContent = stats.teams_analyzed + '+';
                document.getElementById('leagues-covered').textContent = stats.leagues_covered;
                document.getElementById('last-update').textContent = stats.last_update;
                document.getElementById('matches-today').textContent = stats.matches_today;
            } catch (error) {
                console.error('Error actualizando estadÃ­sticas:', error);
                // Mantener valores predeterminados
            }
        }

        // InicializaciÃ³n
        document.addEventListener('DOMContentLoaded', function() {
            loadSavedTheme();
            loadFeaturedMatches();
            
            // Actualizar stats cada 30 segundos
            setInterval(updateRealTimeStats, 30000);
            
            // Cerrar sugerencias al hacer click fuera
            document.addEventListener('click', function(e) {
                if (!e.target.closest('.search-global')) {
                    hideSuggestions();
                }
            });
        });

        // Service Worker para PWA
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/sw.js')
                .then(registration => console.log('SW registered'))
                .catch(error => console.log('SW registration failed'));
        }

        // Script para prueba de carga
        function testLoading(btn) {
            // Obtener la instancia de la aplicaciÃ³n
            const app = window.footballApp;
            
            // Guardar texto original
            const originalText = btn.innerHTML;
            
            // Cambiar texto del botÃ³n
            btn.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i> Probando...';
            btn.disabled = true;
            
            // Mostrar loading global
            app.showLoading('Probando estados de carga...');
            
            // Esperar 2 segundos y ocultar
            setTimeout(() => {
                app.hideLoading();
                
                // Restaurar botÃ³n
                btn.innerHTML = originalText;
                btn.disabled = false;
                
                // Mostrar notificaciÃ³n
                app.showNotification('Â¡Estados de carga probados exitosamente!', 'success');
            }, 2000);
        }
    </script>
